#include <unistd.h>

/**
 * print_unsigned - prints an unsigned number in a given base
 * @n: unsigned number to print
 * @base: base to print in (8, 10, 16)
 * @uppercase: 1 to print uppercase hex letters, 0 for lowercase
 * Return: number of characters printed
 */
int print_unsigned(unsigned int n, int base, int uppercase)
{
    char buffer[32];
    char *digits = uppercase ? "0123456789ABCDEF" : "0123456789abcdef";
    int i = 0, count = 0;

    if (n == 0)
        return write(1, "0", 1);

   
    while (n > 0)
    {
        buffer[i++] = digits[n % base];
        n /= base;
    }

   
    while (--i >= 0)
        count += write(1, &buffer[i], 1);

    return count;
}
